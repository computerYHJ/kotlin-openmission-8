<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#F8FAF7"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="30dp"
        android:layout_marginStart="10dp"
        android:id="@+id/previous_button"
        android:scaleType="fitXY"
        android:src="@drawable/previous_button1"
        android:background="@android:color/transparent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="여러분의 이용권을\n등록하세요."
        android:textColor="@color/black"
        android:fontFamily="@font/nanumyethangul"
        android:textSize="30dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:background="@android:color/black"/>

    <LinearLayout
        android:id="@+id/workoutStartDaysLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:text="시작 날짜"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/workoutStartDaysWarringTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="invisible"
                android:text="사용할 수 없는 아이디입니다"
                android:textColor="#ff0000"/>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/workoutStartDaysTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="15dp"
                    android:paddingTop="12dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_column="1"
                    android:text="버튼을 눌러 날짜를 선택하세요"
                    android:textSize="17dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp">
                <Button
                    android:id="@+id/workoutStartDaysBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/white"
                    android:text="날짜 선택"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/workoutEndDaysLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:text="만료 날짜"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/workoutEndDaysWarringTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="invisible"
                android:text="사용할 수 없는 아이디입니다"
                android:textColor="#ff0000"/>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/workoutEndDaysTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="15dp"
                    android:paddingTop="12dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_column="1"
                    android:text="버튼을 눌러 날짜를 선택하세요"
                    android:textSize="17dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp">
                <Button
                    android:id="@+id/workoutEndDaysBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/white"
                    android:text="날짜 선택"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/workoutStartTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:text="헬스장 오픈시간"
                android:textColor="@color/black"/>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/workoutStartTimeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="15dp"
                    android:paddingTop="12dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_column="1"
                    android:text="버튼을 눌러 시간을 선택하세요"
                    android:textSize="17dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp">
                <Button
                    android:id="@+id/workoutStartTimeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/white"
                    android:text="시간 선택"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/workoutEndTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:text="헬스장 마감시간"
                android:textColor="@color/black"/>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/workoutEndTimeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="15dp"
                    android:paddingTop="12dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_column="1"
                    android:text="버튼을 눌러 시간을 선택하세요"
                    android:textSize="17dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp">
                <Button
                    android:id="@+id/workoutEndTimeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/white"
                    android:text="시간 선택"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>

    <Button
        android:id="@+id/workoutDurationBtn"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/rounded_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이용권 등록"
        android:textColor="@color/white"
        android:textSize="20dp"/>
</LinearLayout>